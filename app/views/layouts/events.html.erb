<!DOCTYPE html>
<html>
<head>
  <title>Timeline</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tag %>

  <script type="text/javascript" charset="utf-8">
    jQuery(function(){
      new App({el: $("#app")});
    });
  </script>
</head>
<body>
  <header id="title">
    <h1>Timeline</h1>
    <input type="search" results="0" incremental="true" placeholder="Search">
  </header>

  <div id="wrapper">
    <div id="sidebar">
      <h3>Home</h3>
      <ul>
        <li><%= link_to "Logout", destroy_user_session_path, method: "delete" %></li>
      </ul>

      <h3>Timeline</h3>
      <ul id="channels">
        <li data-name="today">Today</li>
      </ul>

      <h3>Todos</h3>
      <ul id="options">
      </ul>

      <h3>Statictis</h3>

      <h3>Settings</h3>
    </div>

    <div class="vdivide"></div>

    <div id="content">

      <%= yield %>

    </div>
  </div>

</body>
</html>
